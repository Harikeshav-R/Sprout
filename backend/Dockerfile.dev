FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install uv system-wide
RUN pip install uv

# Copy configuration
COPY pyproject.toml ./

# Sync requirements
RUN uv pip install --system -r pyproject.toml

# Copy src
COPY . .

# Run uvicorn with hot reload
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
